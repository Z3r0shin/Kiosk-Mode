/etc/X11/xorg.conf.d
Section "OutputClass"
  Identifier "vc4"
  MatchDriver "vc4"
  Driver "modesetting"
  Option "PrimaryGPU" "true"
EndSection



sudo nano .xprofile
xhost +SI:localuser:zeroshin


/etc/xdg/lxsession/LXDE-pi/autostart
@xrandr --output HDMI-1 --rotate right



/etc/X11/xinit/xinitrc
xrandr --output HDMI-1 --rotate right
